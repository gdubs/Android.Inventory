<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_inventory_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<ScrollView-->
    <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:fillViewport="true">-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout_fragments_inventory_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<include-->
        <!--android:id="@+id/tool_bar_inventory_activity"-->
        <!--layout="@layout/tool_bar_inventory_activity"/>-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_inventory_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/siPrimaryColor"
            android:backgroundTint="@color/siAccentColor">

        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/frame_layout_activity_inventory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>
    </LinearLayout>
    <!--</ScrollView>-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_inventory_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        android:src="@drawable/vector_plus"
        android:tint="@color/siPrimaryLight"
        app:layout_anchor="@id/linear_layout_fragments_inventory_activity"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>