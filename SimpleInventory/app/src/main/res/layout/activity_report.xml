<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
android:id="@+id/coordinator_inventory_activity"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linear_layout_fragments_report_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<include-->
            <!--android:id="@+id/tool_bar_report_activity"-->
            <!--layout="@layout/tool_bar_report_activity"/>-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar_report_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/siPrimaryColor"
            android:backgroundTint="@color/siAccentColor">
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:id="@+id/frame_layout_activity_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>
    </LinearLayout>
    <!--</ScrollView>-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_report_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="4dp"
        app:layout_anchor="@id/linear_layout_fragments_report_activity"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@drawable/vector_plus"
        android:tint="@color/siPrimaryLight"/>
</android.support.design.widget.CoordinatorLayout>